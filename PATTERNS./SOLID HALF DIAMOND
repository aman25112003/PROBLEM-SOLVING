 #include <iostream>
using namespace std;
int main() 
{

  int num;
  cout<<"ENTER THE NUMBER"<<endl;
  cin>>num;
  //UPPER PART
  for(int i=0;i<num;i++)
    {
      int j;
      for(j=0;j<i+1;j++)
        {
          cout<<"*";
        }
      cout<<endl;
    }
  //LOWER PART
  for(int i=0;i<num-1;i++)
    {
      for(int j=0;j<num-i-1;j++)
        {
          cout<<"*";
        }
      cout<<endl;
    }

  return 0;
}
