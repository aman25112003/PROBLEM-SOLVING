 #include <iostream>
using namespace std;
int main() 
{

  int num;
  cout<<"ENTER THE NUMBER"<<endl;
  cin>>num;

  for(int i=0;i<num;i++)
    {
      int j;
      for( j=0;j<i+1;j++)
        {
          int ans=j+1;
          char ch=ans+'A'-1;
          cout<<ch;
        }
      j=j-1;
      for(;j>=1;j--)
        {
          int ans=j;
          char ch=ans+'A'-1;
          cout<<ch;
        }
      cout<<endl;
    }
  return 0;
}
