#include <iostream>
using namespace std;
int main() 
{

  int num;
  cout<<"ENTER THE NUMBER"<<endl;
  cin>>num;

  for(int i=0;i<num;i++)
    {
      for(int j=0;j<i+1;j++)
        {
          if(j==0 || j==i || i==num-1)
          {
              cout<<j+1;
          }
          else
          {
            cout<<" ";          }
        }
      cout<<endl;
    }
  return 0;
}
